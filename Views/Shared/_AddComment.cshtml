

<div>
    <h3>Add a Comment</h3>
    <p>This section is used to add a commment</p>
    
    <div>
        <form action='/Comments/Create' method='post' >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"> 
                <label for="Comment.Title" class="control-label">Commenter</label>
                <!-- PASS - explicitly specify input attributes vs ... -->
                <input type="text" value="" name="Title" id="commentTitle" class="form-control" />
            </div>
            
            <div class="form-group">
                <label for="Comment.CreatedAt" class="control-label">Created At</label>
                <input type="text" name="CreatedAt" id="commentCreatedAt" class="form-control" />
            </div>

            <div class="form-group">
                <label for="Comment.Content" class="control-label">Comment</label>
                <textarea type="textarea" rows="5" name="Content" id="commentContent" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="Comment.Article_Id" class="control-label">Article Id</label>
                <input type="text" name="Article_Id" id="commentArticleId" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        
        </form>
    </div>
    
</div>