@{
    ViewData["Title"] = "Create New Article";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"] </h1>
    
    <!-- add form to post article here -->    
    <form>
        <div class="form-group">
            <label for="articleTitle">Article Title</label>
            <input type="text" class="form-control" id="articleTitle" aria-describedby="articleTitle" placeholder="Enter article title">
        </div>
        
        <div class="form-group">
            <label for="articleContent">Article Content</label>
            <input type="textarea" class="form-control" id="articleContent" placeholder="Enter your Article here">
        </div>
